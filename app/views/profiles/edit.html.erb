<h1>Edit Your Profile</h1>
<div class="alert">
<% flash.each do |key, value| %>
  <% if key == "error" %>
    <%= content_tag :div, value, class: "text-center_alert_alert-warning" %>
  <% elsif key == "alert" %>
    <%= content_tag :div, value, class: "text-center_alert_alert-danger" %>
  <% end %>
<% end %>
</div>
<%= form_for @profile do |p| %>
<%= p.text_field :username %>
<%= p.text_field :email %>
<%= p.text_field :password %>
<%= p.submit "Update Your Profile" %>
<% end  %>

<%= button_to "Delete", profile_path(@profile), :method => :delete  %>

<%= link_to "Back to Shouts!", profile_shouts_path(@profile) %>
