<div class="alert">
<% flash.each do |key, value| %>
  <% if key == "error" %>
    <%= content_tag :div, value, class: "text-center_alert_alert-warning" %>
  <% elsif key == "alert" %>
    <%= content_tag :div, value, class: "text-center_alert_alert-danger" %>
  <% end %>
<% end %>
</div>
<h1>Create New Profile </h1>
<div class="box">
  <%= form_for(@profile, url: profiles_path, method: "post") do |f|%>
  <div class ="label"><%= f.label :username  %></div>
  <div class="text"><%= f.text_field :username, placeholder: "Enter a Username", autofocus: true %>
  <div class ="label"><%= f.label :email %></div>
  <div class="text"><%= f.text_field :email, placeholder: "Enter Your Email" %></div>
  <div class ="label"><%= f.label :password %></div>
  <div class="text"><%= f.password_field :password, placeholder: "Make a Password"  %></div>
  <div class ="label"><%= f.label :phone_number %></div>
  <div class="text"><%= f.text_field :phone_number %></div>
  <div>
    <span id ="note-label"><%= f.label(:notification, "Notify me about new shouts!") %></span>
    <span id ="checkbox"><%= f.check_box(:notification) %></span>
  </div>
</div>
<div class="submit"><%= f.submit("Signup", class: "btn btn-primary") %></div>
<% end %>
<footer>
  <div id="signup"><%= link_to "Have an account already? Log in here", site_login_path %></div>
</footer>