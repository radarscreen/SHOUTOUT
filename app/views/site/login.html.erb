

<div id = "header"><h1>ShoutOut!</h1></div>

<div class= "box">

<%= form_tag login_path  do %>


  <div><%= text_field_tag(:username, params[:profile], placeholder: "User name...", autofocus: true)%></div>


  <div><%= label_tag(:password)%></div>
  <div><%= password_field_tag :password %></div>

  <div><%= submit_tag("Log in", class: "btn btn-primary") %></div>

<% end %>

</div>
<h3>Are you new? Let's get you a profile!</h3>
<%= link_to "New Profile", new_profile_path %>

