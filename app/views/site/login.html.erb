
<br><br><br>
<div class= "box">


  <%= form_tag login_path  do %>
  <div class ="row-label">
    <div class = "col-xs-3 col-xs-offset-3"><%= label_tag(:username)%></div>
  </div>
  <div class="row-text">
    <div class="col-xs-3 col-xs-offset-3"><%= text_field_tag(:username, params[:profile], placeholder: "Your Username" autofocus: true)%></div>
  </div>
  <div class ="row-label">
    <div class="col-xs-3 col-xs-offset-3"><%= label_tag(:password)%></div>
  </div>
  <div class="row-text">
    <div class="col-xs-3 col-xs-offset-3"><%= password_field_tag(:password)%></div>
  </div>

  <div class="row-login">
    <div class="login"><%= submit_tag("Log in", class: "btn btn-primary") %></div>
  </div>

  <% end %>

</div>

  <div class="row-footer">
    <div class="col-md-3 col-md-offset-3">
      <div id ="signup"><%= link_to "Sign Up", new_profile_path %></div>
    </div>
    <div class="col-md-3">
      <div id="about"><%= link_to "About Us", '/site/about' %></div>
    </div>
</div>


